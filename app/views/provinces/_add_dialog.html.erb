<% if @province.nil? %>
    <% @province = Province.new %>
<% end %>

<div class="modal fade" id="new-province-modal" title="new province" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">New Province</h4>
        </div>      
        <%= form_for(Province.new,:html=>{:id=>"add-province-form-dialog",:multipart => true,:remote=>true}) do |f| %>
        <div class="modal-body">
            <div id="validate-province-errors" class="form-group"></div>
            <div class="form-group">
                <%= f.label :country %>
                <% if @country.nil? %>
                    <%= f.select :country_id, options_from_collection_for_select(@countries, 'id', 'name'), :class => "form-control" %>
                <% else %>
                    <%= f.select :country_id, options_from_collection_for_select(@countries, 'id', 'name', @country.id), :class => "form-control" %>
                <% end %>
            </div>         
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", placeholder: "Province name" %>
            </div>
        </div>
        <div class="modal-footer">
            <div class="hide-on-success">
                <button aria-hidden="true" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <%= f.submit class: "btn btn-success" %>
            </div>
            <div class="show-on-success hide">
                <button aria-hidden="true" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <% end %>
    </div>
  </div>
</div>