<div class="modal fade" id="edit-province-modal-<%=province.id%>" title="edit province" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Province</h4>
        </div>      
        <%= form_for province,:html=>{:id=>"edit-province-form-dialog"},:remote=>true do |f| %>
        <div class="modal-body">
            <div id="validate-province-errors" class="form-group"></div>
            <div class="form-group">
                <%= f.label :country %>
                <%= f.select :country_id, options_from_collection_for_select(@countries, 'id', 'name', province.country_id), :class => "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
        </div>
        <div class="modal-footer">
            <button aria-hidden="true" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <%= f.submit "Edit Province", class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
