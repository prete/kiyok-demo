<% if @province.errors.any? %>
    $("#validate-province-errors").html('<div class="alert alert-danger  alert-dismissable"><strong><%= pluralize(@province.errors.count, "error") %> prohibited this province from being saved!</strong><ul><% @province.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %></ul></div>');
<%else%>
    $("#add-province-form-dialog").modal("hide");
    $('#notification-message').html("Province created");
    $('#notification-dialog').modal("show");
    location.reload();
<% end %>

