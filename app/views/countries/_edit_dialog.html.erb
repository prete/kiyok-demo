<div class="modal fade" id="edit-country-modal-<%=country.id%>" title="edit country" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Country</h4>
        </div>      
        <%= form_for country,:html=>{:id=>"edit-country-form-dialog"},:remote=>true do |f| %>
        <div class="modal-body">
            <div id="validate-country-errors" class="form-group"></div>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
        </div>
        <div class="modal-footer">
            <button aria-hidden="true" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <%= f.submit "Edit Country", class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
