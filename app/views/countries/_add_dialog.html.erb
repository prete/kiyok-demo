<div class="modal fade" id="new-country-modal" title="new country" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">New Country</h4>
        </div>      
        <%= form_for(Country.new,:html=>{:id=>"add-country-form-dialog",:multipart => true,:remote=>true}) do |f| %>
        <%= hidden_field_tag 'redirect', redirect %>
        <div class="modal-body">
            <div id="validate-country-errors" class="form-group"></div>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", placeholder: "Country name" %>
            </div>
        </div>
        <div class="modal-footer">
            <div class="hide-on-success">
                <button aria-hidden="true" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <%= f.submit class: "btn btn-success" %>
            </div>
            <div class="show-on-success hide">
                <button aria-hidden="true" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
